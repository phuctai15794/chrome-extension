{
    "manifest_version": 3,
    "name": "Amote Extension",
    "description": "Scale up your AOV by 10%+ with motivational quotes personalized on the Cart and Checkout page",
    "version": "1.0",
    "action": {
        "default_title": "Amote Extension",
        "default_popup": "index.html",
        "default_icon": "images/icon-16.png"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "alarms"
    ],
    "externally_connectable": {
        "matches": [
            "*://localhost/*",
            "*://*.google.com/*"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "*://localhost/*",
                "*://*.google.com/*"
            ]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
    }
}